<MedicationEntryScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Medication entry'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Acetylsalicylic (mg)'
            CheckBox:
                id: acetyl
            TextInput:
                id: acetyl_comment
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Paracetamol (ml)'
            CheckBox:
                id: paracetamol
            TextInput:
                id: paracetamol_comment
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Ibuprofen (mg)'
            CheckBox:
                id: ibuprofen
            TextInput:
                id: ibuprofen_comment
        Button:
            text: 'Save'
            on_press: app.save_medication(acetyl.active, paracetamol.active, ibuprofen.active)
            size_hint: (.5, .5)

        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: report_entry
                text: 'waiting'
            Button:
                text: 'Another Entry'
                on_press: app.open_choosing_entry()
                size_hint: (.5, .5)

# All screens are white.
<Screen>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

# All labels are blue.
<Label>:
    color: (0, 0, 0.75, 1)

# All checkboxes are blue.
<CheckBox>:
    canvas:
        Color:
            rgba: (0, 0, 0.75, 1)
        Rectangle:
            source: 'atlas://data/images/defaulttheme/checkbox{radio}{disabled}{on}'.format(radio=('_radio' if self.group else ''), disabled=('_disabled' if self.disabled else ''), on=('_on' if self.active else '_off'))
            size: sp(32), sp(32)
            pos: int(self.center_x - sp(16)), int(self.center_y - sp(16))

# All buttons have white text.
<Button>:
    color: (1, 1, 1, 1)

<TextInput>:
    size_hint: (1, .5)

