<CreateAccount>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            padding: '20sp'
            height: "5dp"
        Label:
            text: 'Create an Account'
            pos_hint: {'center_x': .5, 'center_y': .5}
            color : (0,0,.75,1)
        Label:
            text: 'Enter surname'
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        TextInput:
            id: surname
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (.5, None)
            height: '30sp'
            hint_text: 'Surname'
        Label:
            text: 'Enter Given Name'
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        TextInput:
            id: given_name
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (.5, None)
            height: '30sp'
            hint_text: 'Given Name'
        Label:
            text: 'Enter OpenMRS Patient ID'
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        TextInput:
            id: patient_id
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (.5, None)
            height: '30sp'
            hint_text: 'Patient ID'
        Label:
            text: ''
        Button:
            text: 'Create your account'
            on_press: app.back_to_login()
        Label:
            id: account_verification
            text: app.verification
