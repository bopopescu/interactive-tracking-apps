<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to the Travel Tracking App!'
        Label:
            text: 'This app requires the city that you travelled to and you can also document any health risks that you were exposed to during your trip.'
            size_hint: 1, 1
            text_size: self.size
            halign: 'center'
        Label:
            text: 'On the last screen, you will be provided with nearby health facilities that you may visit if you please.'
        BoxLayout:
            orientation: 'horizontal'
            Widget:
                size_hint: 1, 1
            Button:
                text: 'Continue'
                on_press: app.open_next_screen()
            Widget:
                size_hint: 1, 1
        Widget:
            size_hint: 0.5, 1
