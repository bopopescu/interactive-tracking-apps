<FactorScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Please add all the health risk that you were exposed to on your trip.'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Risk(s):'
            GridLayout:
                id: risk_grid
                rows: 3
                cols: 4
                Label:
                    text: 'Chicken Pox'
                CheckBox:
                    id: checkbox_1
                Label:
                    text: 'Coughing'
                CheckBox:
                    id: checkbox_2
                Label:
                    text: 'Fever'
                CheckBox:
                    id: checkbox_3
                Label:
                    text: 'Muscle Aches'
                CheckBox:
                    id: checkbox_4
                Label:
                    text: 'Severe Diarrhea'
                CheckBox:
                    id: checkbox_5
                Label:
                    text: 'Vomiting'
                CheckBox:
                    id: checkbox_6
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Back'
                on_press: app.open_previous_screen()
                size_hint: .3, .3
            Widget:
            Button:
                text: 'Continue'
                on_press: app.open_next_screen()
                size_hint: .3, .3
