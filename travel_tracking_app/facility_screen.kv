<FacilityScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Here are all the facilities in your city.'
        Label:
            id: hospital_location
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Back'
                size_hint: .3, .3
                on_press: app.open_previous_screen()
            Widget:
            Button:
                text: 'Submit form'
                size_hint: .3, .3
                on_press: app.submit_form()
