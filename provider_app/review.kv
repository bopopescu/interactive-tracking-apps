<ReviewScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Patient Observation(s)'
        BoxLayout:
            id: data
            BoxLayout:
                orientation: 'vertical'
                id: visit_times
                Label:
                    text: 'Visit times:'
            BoxLayout:
                orientation: 'vertical'
                id: database_entries
                Label:
                    text: 'App Entries'
            BoxLayout:
                orientation: 'vertical'
                id: visit_encounters
                Label:
                    text: 'Patient-provider encounters during the visit'
        BoxLayout:
            Button:
                text: 'Back'
                size_hint: .25, .25
                on_press: app.select_patient()
            Widget:
