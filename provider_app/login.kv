<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '20sp'
        height: "5dp"
        Label:
            text: 'Enter Username'
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        TextInput:
            text: 'admin'
            id: username
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (.5, None)
            height: '30sp'
            hint_text : 'Username'
        Label:
            text: 'Enter Password'
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        TextInput:
            id: password
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (.5, None)
            height: '30sp'
            hint_text : 'Password'
        Label:
            id: error_message
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        Button:
            text: 'Submit'
            color: (1,0,0,1)
            on_press: app.user_login(username.text, password.text)

<Screen>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
