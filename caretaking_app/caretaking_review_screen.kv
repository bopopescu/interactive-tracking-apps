<ReviewScreen>
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Patient Name:'
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: (1,0,0,1)
        Label:
            text: app.patient_id
            pos_hint:{'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        Label:
            text: 'Location of Visit:'
            pos_hint:{'center_x': .5, 'center_y': .5}
            color: (1,0,0,1)
        Label:
            text: app.location
            pos_hint:{'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        Label:
            text: 'Physical Activity Level:'
            pos_hint:{'center_x': .5, 'center_y': .5}
            color: (1,0,0,1)
        Label:
            text: app.activity
            pos_hint:{'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        Label:
            text: 'Appetite Level:'
            pos_hint:{'center_x': .5, 'center_y': .5}
