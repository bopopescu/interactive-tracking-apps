        Button:
            text: 'Confirm and Submit Report'
            color: (1,0,0,1)
            on_press: app._submit_entry()
        Button:
            text: 'Go Back'
            color: (1,0,0,1)
            on_press: app.login_in()
        Label:
            text:app.verification
            color : (0,0,.75,1)











