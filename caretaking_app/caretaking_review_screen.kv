        Label:
            text:app.appetite
            pos_hint:{'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        Label:
            text: 'Date of birth of Patient:'
            pos_hint:{'center_x': .5, 'center_y': .5}
            color: (1,0,0,1)
