        Label:
            text:app.weight
            pos_hint:{'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        Label:
            text: 'Temperature of Patient:'
            pos_hint:{'center_x': .5, 'center_y': .5}
