<Login>
        BoxLayout:
            orientation: 'vertical'
            padding: '20sp'
            height: "5dp"
        Label:
            text: 'Login'
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: (0,0,.75,1)
        Spinner:
                orientation:'horizontal'
                id: accounts
                text: "Select your account"
                values: ('5-Very Healthy', '4-Healthy', '3-Normal', '2-Needs Improvement', '1-Poor')
                size_hint: (1, None)
                pos_hint: {'center_x': .5, 'center_y': .5}
                height: '50sp'
        Button:
                text: 'Login'
                color: (1,0,0,1)
                on_press:app.
        Button:
                text: 'Create an Account'
                color: (1,0,0,1)
                on_press:app





<Screen>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

